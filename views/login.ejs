<%- include('partials/header'); -%>


  <section class="h-100 gradient-form" style="background-color: #eee;">
    <div class="container py-5 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-xl-10">
          <div class="card rounded-3 text-black">
            <div class="row g-0">
              <div class="col-lg-6">
                <div class="card-body p-md-5 mx-md-4">
  
                  <div class="text-center">
                    <i class="fa fa-cog fa-spin fa-2x fa-fw"></i>
                    <h4 class="mt-1 mb-5 pb-1">Eproc </h4>
                  </div>
  
                  <form action="/login" method="POST">
  
                    <div class="form-outline mb-4">
                      <label for="email" class="form-label">Email:</label>
                      <input type="email" class="form-control" id="email" name="data[email]" placeholder="email" required>
                    </div>
  
                    <div class="form-outline mb-4">
                      <label for="password" class="form-label">Password:</label>
                      <input type="password" class="form-control" id="password" name="data[password]" placeholder="password" required>
                    </div>
  
                    <div class="text-center pt-1 mb-5 pb-1">
                      <button class="btn btn-primary btn-block fa-xl gradient-custom-2 mb-3" type="submit">Login</button>
                    </div>
  
                    <div class="d-flex align-items-center justify-content-center pb-4">
                      <p class="mb-0 me-2">Belum punya akun?</p>
                      <a href="/register">
                      <button type="button" class="btn btn-outline-danger">Daftar</button>
                      </a>
                    </div>
  
                  </form>
  
                </div>
              </div>
              <div class="col-lg-6 d-flex align-items-center gradient-custom-2">
                <div class="text-white px-3 py-4 p-md-5 mx-md-4">
                  <h4 class="mb-4">We are more than just a company</h4>
                  <p class="small mb-0">Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod
                    tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud
                    exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>




<%- include('partials/footer'); -%>
